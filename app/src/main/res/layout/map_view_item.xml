<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:layout_toRightOf="@+id/layout_buttonNetwork">

    <Button
        android:id="@+id/buttonTime"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/list_time"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewTimeAttached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/buttonTime"
        android:gravity="top"
        android:text="textViewTimeAttached"
        android:textColor="@color/text2"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textViewTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTimeAttached"
        android:text="textViewTown"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTown"
        android:layout_marginTop="3dp"
        android:background="@drawable/list_location"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTown"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/buttonLocation"
        android:text="textViewLocation"
        android:textSize="10sp"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/buttonOperator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewLocation"
        android:layout_marginTop="3dp"
        android:background="@drawable/list_operator"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewOperatorAndNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLocation"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/buttonOperator"
        android:text="textViewOperatorAndNetwork"
        android:textColor="@color/text2"
        android:textSize="10sp" />
</RelativeLayout>
