<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/layout_buttonNetwork"
            android:layout_width="64dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonNetwork"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_2g"
                android:text="2G"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/layout_buttonNetwork"
            android:paddingLeft="64dp">

            <Button
                android:id="@+id/buttonTime"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/list_time"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewTimeAttached"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/buttonTime"
                android:gravity="top"
                android:text="textViewTimeAttached"
                android:textColor="@color/text2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewTimeAttached"
                android:layout_marginTop="2dp"
                android:text="textViewTown"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonLocation"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewTown"
                android:layout_marginTop="6dp"
                android:background="@drawable/list_location"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTown"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/buttonLocation"
                android:text="textViewLocation"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text" />

            <Button
                android:id="@+id/buttonOperator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewLocation"
                android:layout_marginTop="9dp"
                android:background="@drawable/list_operator"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewOperatorAndNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewLocation"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/buttonOperator"
                android:text="textViewOperatorAndNetwork"
                android:textColor="@color/text2"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>